{
  "title": "Bid Alert Scraper Input",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "source": {
      "title": "Source Portal",
      "type": "string",
      "description": "Select which portal to scrape",
      "editor": "select",
      "enum": ["ontario", "samgov", "merx", "boston", "global", "albertapurchasing", "bcbid", "newbrunswick", "novascotia", "saskatchewan", "ionwave", "bidnet", "bonfire", "opengov", "publicpurchase", "vermont", "newfoundland", "cfta", "bidscanada", "bidcentral", "ampquebec"],
      "enumTitles": ["Ontario Tenders Portal", "SAM.gov", "Merx", "Boston", "Global", "Alberta Purchasing Connection", "BC Bid", "New Brunswick", "Nova Scotia", "Saskatchewan", "Ionwave", "BidNet", "Bonfire", "OpenGov", "Public Purchase", "Vermont", "Newfoundland and Labrador", "CFTA", "Bids Canada", "BidCentral", "AMQ Quebec"],
      "default": "ontario"
    },
    "webhookUrl": {
      "title": "Webhook URL",
      "type": "string",
      "description": "Supabase webhook URL to send scraped data",
      "editor": "textfield"
    },
    "webhookSecret": {
      "title": "Webhook Secret",
      "type": "string",
      "description": "Secret key for webhook authentication",
      "editor": "textfield",
      "isSecret": true
    },
    "maxItems": {
      "title": "Max Items",
      "type": "integer",
      "description": "Maximum number of items to scrape (0 for all)",
      "default": 0,
      "minimum": 0
    },
    "debug": {
      "title": "Debug Mode",
      "type": "boolean",
      "description": "Run in debug mode with slower execution",
      "default": false
    },
    "headless": {
      "title": "Headless Mode",
      "type": "boolean",
      "description": "Run in headless mode with slower execution",
      "default": true
    }
  },
  "required": ["source", "webhookUrl", "webhookSecret"]
}